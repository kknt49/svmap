<%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="picture_title">
    <br>
    <%= form.label :写真 %>
    <%= form.file_field :image, id: :picture_image %>
    <%= form.hidden_field :image_cache %>
    <br>
    <%= form.label :カテゴリ %>
    <%= form.select :cate, [["路線バス", "路線バス"], ["高速バス", "高速バス"], ["タクシー", "タクシー"], 
                            ["ダンプカー", "ダンプカー"], ["ミキサー車", "ミキサー車"], ["クレーン車", "クレーン車"], ["ショベルカー", "ショベルカー"], ["ブルドーザー", "ブルドーザー"], ["ロードローラー", "ロードローラー"],
                            ["消防車", "消防車"],["救急車", "救急車"],["パトカー", "パトカー"],
                            ["レッカー車","レッカー車"],["トラック","トラック"], ["トレーラー","トレーラー"], ["清掃車","清掃車"], 
                            ["その他", "その他"]
                           ] ,class:"form-control" %>

