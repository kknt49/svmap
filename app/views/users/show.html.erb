<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>


<div class="container">
  <div class = "title">
    <h3>お気に入り写真一覧</h3>
  </div>
  
  <div class = "row eq-height"> 
    <% @favorites_pictures.each do |favorites_picture| %>
      <div class="col-xs-12
                col-md-4 border">
        <p><%= image_tag Picture.find(favorites_picture.picture_id).image, :width => "70%"  %></p>
        <p>カテゴリ：<%= Picture.find(favorites_picture.picture_id).cate %></p>        
        <p>投稿者：<%= User.find(Picture.find(favorites_picture.picture_id).user_id).name %></p>
        <%= link_to '詳細', picture_path(favorites_picture.picture_id), class: 'btn btn-success' %>
      </div>

    <% end %>  
  
  </div>

</div>