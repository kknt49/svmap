<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>


<div class="container">
  <div class = "title">
    <h1>お気に入り写真一覧</h1>
    <table class = "table">
      <tr>
        <th>カテゴリ</th>
        <th>写真</th>
        <th>投稿者</th>
        <th></th>
      </tr>

      <% @favorites_pictures.each do |favorites_picture| %>
        <tr>
          <td><%= Picture.find(favorites_picture.picture_id).cate %></td>
          <td><%= image_tag Picture.find(favorites_picture.picture_id).image %></td>
          <td><%= User.find(Picture.find(favorites_picture.picture_id).user_id).name %></td>
          <td><%= link_to '詳細', picture_path(favorites_picture.picture_id), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>